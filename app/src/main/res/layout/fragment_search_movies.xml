<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_8_dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/movie_search_view"
        style="?attr/searchViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_view_rounded"
        android:elevation="@dimen/elevation_2dp"
        android:queryHint="@string/search_by_tittle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/search_by_tittle" />

</androidx.constraintlayout.widget.ConstraintLayout>